{{#if Libros}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each Libros}}
            <li class="list-group-item">
                <h4> Cliente: {{this.item.user}} </h4>
                <p> Libro solicitado: {{this.item.nombreLibro}}</p>
                <p> Tema: {{this.item.temaLibro}} </p>
                <p> Cantidad: {{this.cantidad}}</p>
                <p>Precio: {{this.precioLibro}}</p>

                <div class="card-body">
                    <form action="/" method="POST">
                        <div class="row">
                    </form>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Cantidad total libros pedidos: {{totalCantidadLibro}} </strong>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Precio total libros pedidos: {{totalPrecioLibro}} </strong>
    </div>
</div>
<hr>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2> No hay reportes </h2>
    </div>
</div>
{{/if}}