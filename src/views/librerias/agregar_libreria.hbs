<div class="col-md-3 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Librerías</h3>
        </div>
        <div class="card-body">
            <form action="/librerias/agregar_libreria" method="POST">
                <div class="form-group">
                    <input type="text" name="codigoLibreria" class="form-control" placeholder="Código" autofocus />
                </div>
                <div class="form-group">
                    <textarea name="nombreLibreria" class="form-control" placeholder="Nombre"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="paisLibreria" class="form-control" placeholder="País"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="ubicacionLibreria" class="form-control" placeholder="Ubicación"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="telefonoLibreria" class="form-control" placeholder="Teléfono"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="horarioLibreria" class="form-control" placeholder="Horario"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Agregar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
