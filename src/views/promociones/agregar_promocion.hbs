<div class="col-md-3 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Promociones</h3>
        </div>
        <div class="card-body">
            <form action="/promociones/agregar_promocion" method="POST">
                <div class="form-group">
                    <input type="text" name="codigoPromocion" class="form-control" placeholder="Código" autofocus />
                </div>
                <div class="form-group">
                    <textarea name="descripcionPromocion" class="form-control" placeholder="Descripción"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="fechaInicioPromocion" class="form-control" placeholder="Fecha de inicio"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="fechaFinPromocion" class="form-control" placeholder="Fecha de cierre"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="descuentoPromocion" class="form-control" placeholder="Descuento"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Agregar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
