<div class="row">
    {{#each libros}}
    <div class='col-md-3'>
        <div class='card'>
            <div class='card-body'>
                <h4 class='card-tittle'>
                    {{codigoLibro}}
                </h4>
                <p> {{Libreria}}
                </p>
                <p> {{nombreLibro}}
                </p>
                <p> {{temaLibro}}
                </p>
                <p> {{descripcionLibro}}
                </p>
                <p> {{cantidadVendidaLibro}}
                </p>
                <p> {{cantidadDisponibleLibro}}
                </p>
                <p> {{precioLibro}}
                </p>
                <form action="/carritos/{{this.id}}">
                    <input type="hidden" name="_method">
                    <button class="btn btn-success btn-block btn-sm" type="submit">
                        Añadir al carrito
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class='card mx-auto'>
        <div class='card-body'>
            <p class="lead"> No hay libros</p>
        </div>
    </div>
    {{/each}}
</div>

