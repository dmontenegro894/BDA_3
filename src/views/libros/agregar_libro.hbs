<div class="col-md-3 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Libros</h3>
        </div>
        <div class="card-body">
            <form action="/libros/agregar_libro" method="POST">
                <div class="form-group">
                    <input type="text" name="codigoLibro" class="form-control" placeholder="Código" autofocus />
                </div>
                <div class="form-group">
                    <textarea name="Libreria" class="form-control" placeholder="Librería"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="nombreLibro" class="form-control" placeholder="Nombre"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="temaLibro" class="form-control" placeholder="Tema"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="descripcionLibro" class="form-control" placeholder="Descripción"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="cantidadVendidaLibro" class="form-control" placeholder="Vendidos"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="cantidadDisponibleLibro" class="form-control" placeholder="Disponibles"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="precioLibro" class="form-control" placeholder="Precio"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Agregar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>