<div class="row">
     <div class="col-md4 mx-auto">
         <div class="card">
             <div class="card-header">
                <h1>Registro</h1>
             </div>
             <div class="card-body">
                  <form action="/users/signup" method="POST">
                      <div class="form-group">
                          <input type="text" class="form-control" name="nombreUser" placeholder="Nombre completo"
                          value="{{nombreUser}}">
                      </div>
                      <div class="form-group">
                          <input type="email" class="form-control" name="email" placeholder="Correo"
                          value="{{email}}">
                      </div>
                      <div class="form-group">
                      </div>
                      <div class="form-group">
                          <input type="text" class="form-control" name="usuarioUser" placeholder="Usuario"
                          value="{{usuarioUser}}">
                      </div>
                      <div class="form-group">
                          <input type="password" class="form-control" name="password" placeholder="Contraseña">
                      </div>
                      <div class="form-group">
                          <input type="password" class="form-control" name="confirmar_contraseña" placeholder="Confirmar contraseña">
                      </div>
                      <div class="form-group">
                          <button type="submit" class="btn btn-primary btn-block">
                              Registrarse
                          </button>
                      </div>
                  </form>
             </div>
         </div>
     </div>
</div>